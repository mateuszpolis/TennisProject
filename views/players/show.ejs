<div class="showPlayerWrap">
  <div>
    <h1><%= player.name %></h1>
    <img
      height="300px"
      width="240px"
      style="object-fit: cover"
      src="<%= player?.picturePath %>"
      alt="<%= player.name %>"
    />
  </div>
  <div class="showPlayerInfo">
    <div id="playerCountry">
      <span><%= player.country.toUpperCase() %></span>
      <span><%= player.birthdate.toISOString().slice(0, 10) %></span>
    </div>
    <div></div>
    <div id="playerEdit">
      <div>
        <%- include("../partials/editForm.ejs", {path:
        `/players/${player.id}/edit`})%>
      </div>
      <div>
        <%- include('../partials/deleteForm', { url: `/players/${player.id}`})
        %>
      </div>
      <div>
        <a class="backButton" href="/players"
          ><i class="fa-solid fa-arrow-left"></i
        ></a>
      </div>
    </div>
  </div>
</div>
<% if (matches.length > 0) { %>
<h3>Matches played: <span id="numberOfMatchesPlayed"><%= matches.length %></span></h3>
<% matches.forEach(match => { %> <%- include('../partials/showMatch', { match:
match }) %> <% }) %> <% } %>
